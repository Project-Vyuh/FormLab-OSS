rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidSize() {
      return request.resource.size < 50 * 1024 * 1024; // 50MB max
    }

    function isValidImageOrVideo() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('video/.*');
    }

    // User-owned files organized by category
    match /users/{userId}/{category}/{allPaths=**} {
      // Allow users to read their own files
      allow read: if isOwner(userId);

      // Allow users to create/update files with validation
      allow create, update: if isOwner(userId) &&
        isValidSize() &&
        isValidImageOrVideo() &&
        category in ['models', 'wardrobe', 'tryons', 'videos', 'products'];

      // Allow users to delete their own files (no validation needed for deletion)
      allow delete: if isOwner(userId) &&
        category in ['models', 'wardrobe', 'tryons', 'videos', 'products'];
    }

    // Temporary uploads (e.g., for processing)
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId) &&
        isValidSize() &&
        isValidImageOrVideo();

      // Auto-delete temp files after 24 hours (requires Cloud Function)
    }

    // Public assets (read-only, managed via Admin SDK)
    match /public/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if false; // Admin SDK only
    }

    // Predefined content (models, wardrobe items)
    match /predefined/{category}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Admin SDK only
    }
  }
}
